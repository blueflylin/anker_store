      $(function(){
        $("#head-menu").click(function(){
          $("#head-container").toggleClass('show');
        })
        $("#head-mask").click(function(){
          $("#head-container").toggleClass('show');
        })
      })
       function chageURL(obj){
        var $this = $(obj);
        var array = ["PowerCore+ 10050","PowerCore+ 26800 & PowerPort+ 1"];
        if(selectCountry.toUpperCase() =="US" || !selectCountry){
          if(array.indexOf($this.parent().parent().attr("charegtype"))>=0){
            var url = $this.attr("chargerUrl");
            $this.attr("href",url+"&qid="+Math.round(new Date().getTime()/1000-60));
          }
        }
      }
